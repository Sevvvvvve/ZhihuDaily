<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/splash_background"
    tools:context=".ui.splash.SplashActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@id/splash_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@id/splash_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            style="@style/TextAppearance.Splash.Author" />
    </FrameLayout>

    <LinearLayout
        android:id="@id/splash_logo_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_logo_container_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/splash_logo"
            android:background="@drawable/splash_logo_bg"
            android:padding="8dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/splash_title_light"
                android:text="@string/splash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/splash_subtitle_dark"
                android:text="@string/splash_sub_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
