<resources>
    <style name="Theme.Splash" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/splash_background</item>
    </style>

    <style name="TextAppearance.Splash.Author" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/img_author</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/img_author_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ActionBar.TitleText.Light" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="TextAppearance.Drawer.Header" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Drawer.Item" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">?attr/itemTitleUnreadTextColor</item>
    </style>

    <style name="TextAppearance.List.Item.Title" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">2</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextAppearance.List.Item.Title.Unread" parent="@style/TextAppearance.List.Item.Title">
        <item name="android:textColor">?attr/itemTitleUnreadTextColor</item>
    </style>

    <style name="TextAppearance.Story.ImageSource" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">#b3ffffff</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextAppearance.Story.Title" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/top_image_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="Daily.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="DailyThemeDark" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@color/activity_background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:selectableItemBackground">@drawable/abc_item_background_holo_dark</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/back</item>
        <item name="drawerArrowStyle">@style/Daily.DrawerArrowStyle</item>
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="activityBackground">@color/activity_background_dark</item>
        <item name="activityBackgroundGray">@color/activity_background_gray_dark</item>
        <item name="bigImageMask">@drawable/mask</item>
        <item name="cardItemBackground">@color/cardview_dark_background</item>
        <item name="lightDarkModeIcon">@drawable/light_mode</item>
        <item name="commentAuthorNameTextColor">@color/comment_item_author_dark</item>
        <item name="commentContentTextColor">@color/comment_item_content_dark</item>
        <item name="commentExpandButtonBackground">@color/comment_item_reply_expand_button_bg_dark</item>
        <item name="commentExpandButtonTextColor">@color/comment_item_reply_comment_content_dark</item>
        <item name="commentHeaderTitleTextColor">@color/comment_header_dark</item>
        <item name="commentNoCommentImageSource">@drawable/dark_comment_empty</item>
        <item name="commentNoCommentPromptTextColor">@color/comment_no_comment_prompt_text_dark</item>
        <item name="commentReplyContentTextColor">@color/comment_item_reply_comment_content_dark</item>
        <item name="commentReplyPromptBackground">@color/comment_item_reply_prompt_message_bg_dark</item>
        <item name="commentReplyPromptTextColor">@color/comment_item_reply_prompt_message_dark</item>
        <item name="drawerBackgroundItemPrimary">@color/background_drawer_item_primary_dark</item>
        <item name="drawerBackgroundPrimary">@color/background_drawer_primary_dark</item>
        <item name="navBackgroundNormal">@color/drawer_bg_normal_dark</item>
        <item name="cardItemTitleTextColor">@color/list_item_intro_dark</item>
        <item name="itemTitleUnreadTextColor">@color/list_item_title_dark</item>
        <item name="preferenceTheme">@style/SettingsPreferenceTheme</item>
    </style>

    <style name="DailyThemeLight" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/activity_background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:selectableItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/back</item>
        <item name="drawerArrowStyle">@style/Daily.DrawerArrowStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="activityBackground">@color/activity_background_light</item>
        <item name="activityBackgroundGray">@color/activity_background_gray_light</item>
        <item name="bigImageMask">@drawable/mask</item>
        <item name="cardItemBackground">@color/cardview_light_background</item>
        <item name="lightDarkModeIcon">@drawable/dark_mode</item>
        <item name="commentAuthorNameTextColor">@color/comment_item_author_light</item>
        <item name="commentContentTextColor">@color/comment_item_content_light</item>
        <item name="commentExpandButtonBackground">@color/comment_item_reply_expand_button_bg_light</item>
        <item name="commentExpandButtonTextColor">@color/comment_item_reply_comment_content_light</item>
        <item name="commentHeaderTitleTextColor">@color/comment_header</item>
        <item name="commentNoCommentImageSource">@drawable/comment_empty</item>
        <item name="commentNoCommentPromptTextColor">@color/comment_no_comment_prompt_text</item>
        <item name="commentReplyContentTextColor">@color/comment_item_reply_comment_content_light</item>
        <item name="commentReplyPromptBackground">@color/comment_item_reply_prompt_message_bg_light</item>
        <item name="commentReplyPromptTextColor">@color/comment_item_reply_prompt_message_light</item>
        <item name="drawerBackgroundItemPrimary">@color/background_drawer_item_primary_light</item>
        <item name="drawerBackgroundPrimary">@color/background_drawer_primary_light</item>
        <item name="navBackgroundNormal">@color/drawer_bg_normal_light</item>
        <item name="cardItemTitleTextColor">@color/list_item_intro_light</item>
        <item name="itemTitleUnreadTextColor">@color/list_item_title_light</item>
        <item name="preferenceTheme">@style/SettingsPreferenceTheme</item>
    </style>

    <style name="SettingsPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/SettingsPreferenceCategoryStyle</item>
    </style>

    <style name="SettingsPreferenceCategoryStyle" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/settings_preference_category_material</item>
    </style>
</resources>
